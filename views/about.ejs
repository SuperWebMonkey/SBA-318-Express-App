<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SBA 308A - Web App</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <!-- Navbar -->
    <section id="navbar">
      <div class="logo">
        <a href="#">
          <img id="logo-pic" src="/img/negative-man-pic.png" alt="Logo" />
        </a>
      </div>
      <a href="./" class="page tech-shop">Geek Central</a>
      <a href="./" class="page home-page">Home</a>
      <a href="./about" class="page about-page">About</a>
      <a href="./contact" class="page contact-page">Contact</a>
      <a href="./admin" class="page admin-page">Admin</a>
      <a href="#" class="page login" style="float: right">login </a>
      <a href="#" class="page wishlist" style="float: right"
        >wishlist <i class="fas fa-heart"></i
      ></a>
    </section>

    <!-- main section -->
    <section id="main-section">
      <h1 id="">About Page</h1>
    </section>
    <!-- Search bar -->
    <section id="sb-container">
      <h1>Search</h1>
      <form id="searchForm">
        <input type="text" id="rating" placeholder="Search for ratings..." />
        <button type="submit">Search</button>
      </form>
    </section>
    <!-- Ratings -->
    <section id="rating-container" method="GET" action="/search">
      <div id="rating-gallery">
        <ul>
          <% userList.forEach(user => { %>
          <ul>
            <strong><%= user.name %></strong>
            (Review: <%= user.review %>)
          </ul>
          <ul>
            <h4>Review Description:</h4>
            <p><%= user.reviewContent %></p>
          </ul>
          <br />
          <% }) %>
        </ul>
      </div>
    </section>
    <!-- footer -->
    <footer id="my-footer">
      <hr />
      <div class="footer-content">
        <a href="#" class="footer-icon" target="_self"
          ><i class="fab fa-github"></i> </a
        ><a href="#" class="footer-icon" target="_self"
          ><i class="fab fa-linkedin"></i></a
        ><a href="#" class="footer-icon" target="_self"
          ><i class="fab fa-twitter"></i
        ></a>
      </div>
      <div id="copy-right">
        <h5>@2024 Shyguy, All rights reserved</h5>
      </div>
    </footer>
    <!-- js links - put here in case -->
  </body>
</html>
